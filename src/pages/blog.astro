---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';

const allPosts: Array<any> = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
const pageTitle: string = "My Astro Learning Blog"
---
<BaseLayout pageTitle={pageTitle}>
    <p>This is where i'll post about my journey learning Astro.</p>
    <ul>
        {allPosts.map((post: any) => <BlogPost url={post.url}, title={post.frontmatter.title} />)}
    </ul>
</BaseLayout>

