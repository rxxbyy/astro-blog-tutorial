---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle: string = "About Me";

const identity: {
	firstName: string,
	country: string,
	occupation: string,
	hobbies: Array<string>
} = {
	firstName: "Manuel",
	country: "Mexico",
	occupation: "Computer Science Student",
	hobbies: ["workout", "read", "produce music"],
};

const skills: Array<string> = [
	"HTML",
	"CSS",
	"JavaScript",
	"React",
	"Astro",
	"Linux",
	"Bash",
	"Docker",
	"Rust",
	"C",
	"Git",
];

const skillColor: string = "white";
const fontWeight: string = "bold";
const textCase: string = "uppercase"
---
<BaseLayout pageTitle={pageTitle}>
	<style is:global define:vars={{skillColor, fontWeight, textCase}}>
		h1 {
			color: black;
			font-size: 4rem;
			text-align: center;
		}
		
		.skills-section {
			display: flex;
			
		}
		.skills {
			display: flex;
			list-style: none;
			flex-direction: row;
		}
		.skill {
			padding: 0.5rem 0.2rem;
			background-color: #310e0e;
			color: var(--skillColor);
			margin-left: 2px;
			font-weight: var(--fontWeight);
		}

		@media screen and (max-width: 600px) {
			.skills {
				flex-direction: column;
				justify-items: center;
				text-align: center;
			}

			.skill {
				align-content: center;
			}
		}
	</style>
	<p>Here are a few facts about me:</p>
	<ul>
		<li>My name is {identity.firstName}.</li>
		<li>I live in {identity.country} and I am a {identity.occupation}.</li>
		{identity.hobbies.length >= 2 &&
			<li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}.</li>
		}
	</ul>
	<section class="skills-section">
		<ul class="skills">
			{skills.map((skill) => <li class="skill">{skill}</li>)}
		</ul>
	</section>
</BaseLayout>
